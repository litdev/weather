<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_detail_top">

    <TextView
        android:text="10 Tuesday, 20:00"
        android:gravity="center"
        android:textSize="32dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d_dayView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold|italic"
        android:background="@color/color_detail_top"/>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d_list_details"
        android:background="@color/color_detail_body"
        android:layout_below="@+id/d_dayView"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/d_dayView" />


</RelativeLayout>