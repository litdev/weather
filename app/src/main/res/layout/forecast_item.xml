<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/f_layout">


    <TextView
        android:text="xx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f_hourView"
        android:textSize="18dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/f_iconView" />

    <TextView
        android:id="@+id/f_iconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx"
        android:padding="10dp"
        android:textSize="48dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/f_hourView" />

    <TextView
        android:id="@+id/f_tempView"
        android:text="xx"
        android:textSize="28dp"
        android:gravity="center"
        android:paddingRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/f_iconView" />

    <TextView
        android:text="description"
        android:padding="18dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/f_descrView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/f_iconView"
        android:layout_toStartOf="@+id/f_tempView"
        android:layout_alignBottom="@+id/f_iconView" />

</RelativeLayout>